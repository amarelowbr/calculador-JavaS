<body>
    <h1>somando valores</h1>
    <input type="number" name=" txtn1" id="txtn1"> +
    <input type="number" name="txtn2" id="txtn2">
    <input type="button" value="somar" onclick="somar()">
    <div id="res">resultado</div>
    <script>
function somar(){
var tn1 = window.document.getElementById("txtn1")
var tn2 = window.document.getElementById("txtn2")
var res = window.document.getElementById("res")
var n1 = Number(tn1.value)
var n2 = Number(tn2.value)
var s = n1 + n2
res.innerHTML = s
}
</script>

<h2>multiplicando valores</h2>
<input type="number" name="txtn3" id="txtn3"> X
<input type="number" name="txtn4" id="txtn4">
<input type="button" value = "mult" onclick="multiplique()">
<div id="res2">resultado</div>
<script>
    function multiplique(){
        var tn3 = window.document.getElementById("txtn3")
        var tn4 = window.document.getElementById("txtn4")
        var res2 = window.document.getElementById("res2")
        var n3 = Number(tn3.value)
        var n4 = Number(tn4.value)
        var m = n3 * n4
        res2.innerHTML = m
    }

</script>
<h3>dividindo valores</h3>
<input type="number" name="txtn5" id="txtn5"> /
<input type="number" name="txtn6" id="txtn6">
<input type="button" value = "divid" onclick="dividir()">
<div id="res3">resultado</div>
<script>
    function dividir(){
        var tn5 = window.document.getElementById("txtn5")
        var tn6 = window.document.getElementById("txtn6")
        var res2 = window.document.getElementById("res3")
        var n5 = Number(tn5.value)
        var n6 = Number(tn6.value)
        var r = n5 / n6
        res3.innerHTML = r
    }
</script>
<h4> subtraindo valores </h4>

<input type="number" name="txtn7" id="txtn7"> -
<input type="number" name="txtn8" id="txtn8">
<input type="button" value = "divid" onclick="subtrair()">
<div id="res4">resultado</div>
<script>
    function subtrair(){
        var tn7 = window.document.getElementById("txtn7")
        var tn8 = window.document.getElementById("txtn8")
        var res4 = window.document.getElementById("res4")
        var n7 = Number(tn7.value)
        var n8 = Number(tn8.value)
        var a = n7 - n8
        res4.innerHTML = a
    }




</script>


